<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menufundo"

    tools:context=".menuActivity">

    <ImageView
        android:id="@+id/imgnomeapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/appnomebazar" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/imagebtn"
        android:text="Calculadora"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnConversor"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/imagebtn"
        android:text="ConversÃ£o"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnJogo"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/imagebtn"
        android:text="Jogo cara ou coroa"
        android:textSize="20dp" />

</LinearLayout>